<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jcsoluciones.com.socialfootball.MainActivity"
    tools:showIn="@layout/fragment_teamsmanagement">

    <RelativeLayout
        android:id="@+id/layout_info_profile"
        android:background="@color/md_white_1000"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:id="@+id/ImageTeams"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:bootstrapSize="xs"
            android:layout_margin="5dp"
            app:bootstrapBrand="success"
            app:hasBorder="true" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/button_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bootstrapText="Edit Your Profile"
            android:layout_toRightOf="@+id/ImageTeams"
            android:layout_marginRight="20dp"
            app:typicon="ty_plus_outline"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            app:bootstrapBrand="success"
            app:bootstrapSize="md"
            app:buttonMode="regular"
            android:onClick="SendInvite"
            app:checked="true"
            app:roundedCorners="true" />

        <TextView
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ImageTeams"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/button_event"/>
        <TextView
            android:id="@+id/layout_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ImageTeams"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/layout_name"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_info_directirx"
        android:layout_below="@+id/layout_info_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>


</RelativeLayout>
