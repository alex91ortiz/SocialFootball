<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/md_light_green_500_50"
    tools:context="jcsoluciones.com.socialfootball.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_header"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_menu1"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_matchs"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_matchs"
                android:scaleY=".7"
                android:scaleX=".7"
                android:layout_margin="5dp"
                android:background="?attr/selectableItemBackground"
                android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@+id/btn_matchs"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_alignRight="@+id/btn_matchs"
                    android:textColor="@color/md_white_1000"
                    android:text="MATCH"
                    android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/btn_clubs"
                android:layout_toRightOf="@+id/btn_matchs"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:scaleY=".7"
                android:scaleX=".7"
                android:src="@drawable/football_jersey"
                android:background="?attr/selectableItemBackground"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/btn_clubs"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/md_white_1000"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_alignRight="@+id/btn_clubs"
                android:layout_alignLeft="@+id/btn_clubs"
                android:text="CLUBS"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:id="@+id/layout_menu2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:scaleType="center"
                android:layout_margin="5dp"
                android:id="@+id/btn_myclub"
                android:scaleY=".7"
                android:scaleX=".7"
                android:src="@drawable/football_field"
                android:background="?attr/selectableItemBackground"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/btn_myclub"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_alignRight="@+id/btn_myclub"
                android:layout_alignLeft="@+id/btn_myclub"
                android:text="MY CLUB"
                android:textColor="@color/md_white_1000"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="wrap_content"
                android:scaleType="center"
                android:id="@+id/btn_cup"
                android:layout_margin="5dp"
                android:scaleY=".7"
                android:scaleX=".7"
                android:layout_toRightOf="@+id/btn_myclub"
                android:src="@drawable/ic_cups"
                android:background="?attr/selectableItemBackground"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/btn_cup"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_alignRight="@+id/btn_cup"
                android:layout_alignLeft="@+id/btn_cup"
                android:text="CUPS"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/md_white_1000"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
