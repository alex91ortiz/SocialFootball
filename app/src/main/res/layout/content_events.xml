<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jcsoluciones.com.socialfootball.EventsActivity"
    tools:showIn="@layout/activity_events">
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        app:bootstrapBrand="primary"
        android:id="@+id/info_date"
        android:textSize="17dp"
        app:fontAwesomeIcon="fa_calendar"
        android:layout_height="wrap_content" />
    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/info_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/info_date"
        android:layout_marginLeft="10dp"
        app:bootstrapBrand="primary"
        app:bootstrapText=""

        />
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        app:bootstrapBrand="danger"
        android:id="@+id/info_time"
        android:layout_toRightOf="@+id/info_date_text"
        android:layout_marginLeft="10dp"
        android:textSize="17dp"
        app:fontAwesomeIcon="fa_clock_o"
        android:layout_height="wrap_content" />
    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/info_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/info_time"
        android:layout_alignTop="@+id/info_time"
        android:layout_marginLeft="10dp"
        app:bootstrapBrand="danger"
        app:bootstrapText=""

        />
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        app:bootstrapBrand="warning"
        android:id="@+id/info_location"
        android:layout_toRightOf="@+id/info_time_text"
        android:layout_marginLeft="10dp"
        android:textSize="17dp"
        app:fontAwesomeIcon="fa_map"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/TeamOne"
        android:layout_width="200dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/data_sheet_bronze"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_team"
            android:layout_width="match_parent"
            android:layout_weight=".25"
            android:text="sdd"
            android:padding="10dp"
            android:background="@drawable/data_sheet_header"
            android:layout_height="wrap_content" />
        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:id="@+id/ImageTeams"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            app:bootstrapSize="xs"
            android:layout_marginTop="5dp"
            app:bootstrapBrand="success"
            android:layout_below="@+id/title_team"
            app:hasBorder="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/TeamTwo"
        android:layout_width="200dp"
        android:background="@drawable/data_sheet_bronze"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_team_inv"
            android:layout_width="match_parent"
            android:background="@drawable/data_sheet_header"
            android:layout_weight=".25"
            android:text="sdd"
            android:padding="10dp"
            android:layout_height="wrap_content" />
        <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
            android:id="@+id/ImageTeams_inv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            app:bootstrapSize="xs"
            android:layout_marginTop="5dp"
            app:bootstrapBrand="success"
            android:layout_below="@+id/title_team_inv"
            app:hasBorder="true" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/Vsplay"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_versus"
        android:layout_centerInParent="true"
        android:layout_height="70dp"/>
</RelativeLayout>
