<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="jcsoluciones.com.socialfootball.AcceptInviteActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/champions"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:id="@+id/TeamOne"
            android:layout_width="200dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/data_sheet_bronze"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_team"
                android:layout_width="match_parent"
                android:layout_weight=".25"
                android:text="sdd"
                android:padding="10dp"
                android:background="@drawable/data_sheet_header"
                android:layout_height="wrap_content" />
            <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                android:id="@+id/ImageTeams"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:bootstrapSize="xs"
                android:layout_marginTop="5dp"
                app:bootstrapBrand="success"
                android:layout_below="@+id/title_team"
                app:hasBorder="true" />
        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/TeamTwo"
                android:layout_width="200dp"
                android:background="@drawable/data_sheet_bronze"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:layout_marginBottom="50dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_team_inv"
                    android:layout_width="match_parent"
                    android:background="@drawable/data_sheet_header"
                    android:layout_weight=".25"
                    android:text="sdd"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />
                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    android:id="@+id/ImageTeams_inv"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:bootstrapSize="xs"
                    android:layout_marginTop="5dp"
                    app:bootstrapBrand="success"
                    android:layout_below="@+id/title_team_inv"
                    app:hasBorder="true" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/Vsplay"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_versus"
                android:layout_centerInParent="true"
                android:layout_height="70dp"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
