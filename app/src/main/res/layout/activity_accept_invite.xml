<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/champions"
    tools:context="jcsoluciones.com.socialfootball.AcceptInviteActivity">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/md_blue_grey_300"
        card_view:cardCornerRadius="4dp">
            <RelativeLayout
                android:id="@+id/level_layout"
                android:layout_below="@+id/ImageTeams"
                android:layout_width="match_parent"
                android:layout_weight=".25"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_team"
                    android:layout_width="match_parent"
                    android:layout_weight=".25"
                    android:text="sdd"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />
                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    android:id="@+id/ImageTeams"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:bootstrapSize="xs"
                    android:layout_marginTop="5dp"
                    app:bootstrapBrand="success"
                    android:layout_below="@+id/title_team"
                    app:hasBorder="true" />
                <com.beardedhen.androidbootstrap.BootstrapLabel
                    android:id="@+id/nivel_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    app:bootstrapBrand="primary"
                    app:bootstrapHeading="h6"
                    app:roundedCorners="true"
                    android:text="nivel"
                    android:layout_below="@+id/ImageTeams"
                    />
                <com.beardedhen.androidbootstrap.BootstrapProgressBar
                    android:id="@+id/progess_nivel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/nivel_label"
                    android:layout_alignTop="@+id/nivel_label"
                    app:animated="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/nivel_label"
                    app:bootstrapBrand="success"
                    app:progress="78"
                    app:striped="true"
                    />
            </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_gravity="right"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/md_blue_grey_300"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/level_layout_inv"
            android:layout_below="@+id/ImageTeams"
            android:layout_width="match_parent"
            android:layout_weight=".25"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_team_inv"
                android:layout_width="match_parent"
                android:layout_weight=".25"
                android:text="sdd"
                android:padding="10dp"
                android:layout_height="wrap_content" />
            <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                android:id="@+id/ImageTeams_inv"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:bootstrapSize="xs"
                android:layout_marginTop="5dp"
                app:bootstrapBrand="success"
                android:layout_below="@+id/title_team_inv"
                app:hasBorder="true" />
            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:id="@+id/nivel_label_inv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                app:bootstrapBrand="primary"
                app:bootstrapHeading="h6"
                app:roundedCorners="true"
                android:text="nivel"
                android:layout_below="@+id/ImageTeams_inv"
                />
            <com.beardedhen.androidbootstrap.BootstrapProgressBar
                android:id="@+id/progess_nivel_inv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/nivel_label_inv"
                android:layout_alignTop="@+id/nivel_label_inv"
                android:layout_marginRight="10dp"
                app:animated="true"
                android:layout_toRightOf="@+id/nivel_label_inv"
                app:bootstrapBrand="success"
                app:progress="78"
                app:striped="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
