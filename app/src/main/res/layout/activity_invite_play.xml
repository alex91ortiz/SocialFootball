<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jcsoluciones.com.socialfootball.InvitePlayActivity">

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/ImageTeams"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:bootstrapSize="xs"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:hasBorder="true" />

    <com.beardedhen.androidbootstrap.BootstrapWell
        android:id="@+id/text_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageTeams"
        android:layout_marginTop="10dp"
        app:roundedCorners="true"
        app:bootstrapSize="xl"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Look, I'm in a large well!"
            />
        <TextView
            android:id="@+id/input_layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Look, I'm in a large well!"
            />
        <TextView
            android:id="@+id/input_layout_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Look, I'm in a large well!"
            />
        <TextView
            android:id="@+id/input_layout_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Look, I'm in a large well!"
            />
        <TextView
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Look, I'm in a large well!"
            />
        </LinearLayout>
    </com.beardedhen.androidbootstrap.BootstrapWell>


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bootstrapText="Invitar"
        android:layout_below="@+id/text_label"
        app:typicon="ty_plus_outline"
        android:layout_marginTop="10dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:checked="true"
        app:roundedCorners="true" />
</RelativeLayout>
