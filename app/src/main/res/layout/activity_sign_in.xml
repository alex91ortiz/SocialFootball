<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jcsoluciones.com.socialfootball.SignInActivity">
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        app:roundedCorners="true"
        app:bootstrapSize="lg"
        app:bootstrapBrand="info"
        android:hint="@string/user_username"
        />
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_name"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:bootstrapSize="lg"
        app:roundedCorners="true"
        app:bootstrapBrand="info"
        android:hint="@string/teamsmanagement_email"
        />
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/input_layout_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/input_layout_email"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        app:bootstrapSize="lg"
        app:roundedCorners="true"
        app:bootstrapBrand="info"
        android:hint="@string/user_pass"
        />
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typicon="ty_plus_outline"
        android:layout_below="@+id/input_layout_pass"
        android:layout_gravity="center"
        app:bootstrapBrand="regular"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        app:bootstrapText="SignIn"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="true"
        app:checked="true"
        app:roundedCorners="true" />
    <View
        android:id="@+id/space_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button_sign"
        android:background="@color/bootstrap_gray"
        android:layout_height="10dp" />
    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_below="@+id/space_layout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="signOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
